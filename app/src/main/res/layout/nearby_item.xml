<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="java.lang.String"/>
        <variable
            name="viewtype"
            type="java.lang.String "/>
        <variable
            name="object"
            type="com.patchanok.assigmentmyplace.model.NearbyItemObject"/>

        <variable
            name="favObject"
            type="com.patchanok.assigmentmyplace.model.FavoriteItemObject"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dp10">

        <ImageView
            android:id="@+id/icon_image"
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/dp75"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            bind:imagePath="@{ viewtype.equals(`nearby`) ? object.url : favObject.favUrl }"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10">

            <TextView
                android:id="@+id/place_name_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray700"
                bind:text="@{ viewtype.equals(`nearby`) ? object.name : favObject.favName }"/>

            <TextView
                android:id="@+id/place_url_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                bind:text="@{ viewtype.equals(`nearby`) ? object.vicinity : favObject.vicinity }"
                android:maxLines="1"
                android:ellipsize="end"/>

        </LinearLayout>

        <com.like.LikeButton
            android:id="@+id/favorite_button"
            android:layout_width="@dimen/dp0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:icon_type="Star"
            app:circle_start_color="@color/colorPrimary"
            app:dots_primary_color="@color/colorAccent"
            app:dots_secondary_color="@color/colorPrimary"
            app:circle_end_color="@color/colorAccent"
            app:icon_size="@dimen/dp25"
            app:anim_scale_factor="2">

        </com.like.LikeButton>

    </LinearLayout>

</layout>